doctype html
html
    head
        title #{title}: User Login System
        meta( charset='utf-8')
        meta( name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        nav.navbar.navbar-default.navbar-fixed-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') User Login System
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li(class=(title === 'Members' ? 'active' : ''))
                            a(href='/') Members
                        if !user
                            li(class=(title === 'Register' ? 'active' : ''))
                                a(href='/users/register') Register
                            li(class=(title === 'Login' ? 'active' : ''))
                                a(href='/users/login') Log In
                    ul.nav.navbar-nav.navbar-right
                        if user
                            li
                                a(href='/users/logout') Logout

        .container.main-container
            != messages()
            .row
                .col-sm-12
                    block content

        .container-fluid
            .row
                footer
                    p &copy; 2017, All rights reserved.

        script(src='/javascripts/jquery-3.2.1.min.js')
        script(src='/javascripts/bootstrap.min.js')
